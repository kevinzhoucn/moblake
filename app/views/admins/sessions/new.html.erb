<div class='col-md-4'>
  <h2>管理系统登录</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email, label: '用户名', required: false, autofocus: true, :input_html => { :class => 'form-control' }, wrapper_html: { class: 'form-group'} %>
    <%= f.input :password, label: '密码', required: false, :input_html => { :class => 'form-control' }, wrapper_html: { class: 'form-group'} %>
    <%= f.input :remember_me, label: '记住密码', wrapper_html: { class: 'checkbox'}, as: :boolean if devise_mapping.rememberable?  %>

    <%= f.button :submit, "登录", :class => 'btn-default' %>
  <% end %>

  <%#= render "admins/shared/links" %>
</div>