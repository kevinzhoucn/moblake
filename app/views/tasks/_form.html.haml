.col-md-4
  = simple_form_for @task do |f|  
    = f.error_notification

    = f.input :name, label: "名称", autofocus: true, :label_html => { :name => 'check-item'}, :input_html => { :class => 'form-control' }, wrapper_html: { class: 'form-group'}
    = f.input :description, label: "内容", :input_html => { :class => 'form-control' }, wrapper_html: { class: 'form-group'}

    = f.button :submit, "创建", class: 'btn btn-primary'
    = link_to "取消", root_url, class: 'btn btn-info'
